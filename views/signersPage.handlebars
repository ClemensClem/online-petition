               <div class="signers">
                    {{#signers}}
                    {{#if homepage}}
                    <p><a href="{{homepage}}" target="_blank">{{first}} {{last}}</a> , {{age}},  <a href="signers/{{city}}">{{city}}</a></p>
                    {{else}}
                    <p>{{first}} {{last}} , {{age}},  <a href="signers/{{city}}">{{city}}</a></p>
                    {{/if}}
                    {{/signers}}
                </div>
            </div>
        </div>
